import "tcp";
import "Arrays";
import "async";

let console = {
    log: (msg) => {
        print msg;
    }
};

func promptLoop(socket) {
    print "Enter a message to broadcast (or 'exit' to quit): ";
    readLine((message, err) => {
        if err != nil {
            print "Error reading input: " + err;
            return;
        }
        if message == "exit" {
            print socket;
            socket.close();
            return;
        }
        socket.write(message + "\n");
        promptLoop(socket);
    });
}

